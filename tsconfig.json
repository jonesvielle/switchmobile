{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@env": ["./env.d.ts"]
    },
    "types": ["jest", "@env"],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules", "**/Pods"]
}
